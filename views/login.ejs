<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href='/stylesheets/login.css'>
    <%- include('partials/head'); %>
</head>

<body>
    <div class="wrap row m-0">
        <div class="col-md-8 img p-0">
            <div class="layer ">
            </div>
        </div>

        <div class="col-md-4 form my-auto">
            <div class="container">
                <h3 class="mb-3">Binar Car Rental</h3>
                <h2 class="mb-3">Welcome, Admin BCR</h2>
                <% if (locals.error === true) { %>
                <div class="alert alert-danger d-flex" role="alert">
                    <i class="fa-solid fa-circle-exclamation me-2 mt-1"></i>
                    <span>Masukkan username dan password yang benar. Perhatikan penggunaan huruf kapital.</span>
                </div>
                <% } %>
                <form action="/" method="POST">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control mb-2"
                        placeholder="Contoh: johndee@gmail.com">

                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control mb-4" id="password"
                        aria-describedby="passwordHelpBlock" placeholder="6+ karakter">

                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/script'); %>

